<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Seat_Layout">

    <LinearLayout
        android:id="@+id/linear"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/back"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap To Select Seat"
            android:textColor="#ffffff"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/upper"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Layout"
        android:fontFamily="@font/gotham"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        />

        <TextView
            android:id="@+id/bus_seats"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEAT(S)"
            android:fontFamily="@font/gotham"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/box"
            android:drawableTint="@color/grey"
            android:text="Available Seat"
            android:textSize="12sp"
            android:textAlignment="center"

            />
        <TextView
            android:textSize="12sp"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/box"
            android:drawableTint="@color/colorPrimary"
            android:text="Select Seat"
            android:textAlignment="center"

            />
        <TextView

            android:textSize="12sp"
        android:layout_weight="30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/box"
        android:drawableTint="@color/pink"
        android:text="Booked Seat"
        android:textAlignment="center"

        />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seat_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentStart="true"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seat_rv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentEnd="true"
            />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.skydoves.elasticviews.ElasticButton
            app:button_duration="250"
            app:button_scale="0.87"
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/gotham"
            android:text="Continue"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</LinearLayout>
