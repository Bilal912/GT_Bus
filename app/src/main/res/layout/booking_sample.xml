<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="20dp"
    >
    <LinearLayout
        android:background="@drawable/book_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70" >
            <TextView
                android:id="@+id/routename"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Route"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/booking_demo"
                android:layout_below="@id/routename"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/gotham"
                android:text="Vehicle Number : "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/routename"
                android:id="@+id/booking_id"
                android:layout_toRightOf="@id/booking_demo"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="ID"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/pickup_demo"
                android:layout_below="@id/booking_demo"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/gotham"
                android:text="Pick Up : "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/booking_demo"
                android:id="@+id/pickup"
                android:layout_toRightOf="@id/pickup_demo"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="ID"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/dropup_demo"
                android:layout_below="@id/pickup_demo"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/gotham"
                android:text="Drop Up : "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/pickup"
                android:id="@+id/dropup"
                android:layout_toRightOf="@id/dropup_demo"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="ID"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/departure"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/dropup"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Pick Up Time"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:textColor="#ffffff"
                android:textSize="32sp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/price_id"
                android:textAlignment="center"
                android:layout_below="@id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />
            <com.skydoves.elasticviews.ElasticButton
                android:visibility="gone"
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/book"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/button_border"
                android:text="Book"
                android:fontFamily="@font/gotham"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>