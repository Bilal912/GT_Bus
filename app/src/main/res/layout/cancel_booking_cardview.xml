<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:background="@drawable/book_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:fontFamily="@font/gotham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Booking Date  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:fontFamily="@font/gotham"
            android:id="@+id/booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:fontFamily="@font/gotham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/booking_date"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Booking ID  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:fontFamily="@font/gotham"
            android:id="@+id/booking_id"
            android:layout_below="@id/booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />


        <TextView
            android:fontFamily="@font/gotham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/booking_id"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Cancelation fee  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:fontFamily="@font/gotham"
            android:id="@+id/cancel_fee"
            android:layout_below="@id/booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:fontFamily="@font/gotham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cancel_fee"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Causes  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:fontFamily="@font/gotham"
            android:id="@+id/cause_id"
            android:layout_below="@id/cancel_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cause_id"
            android:textColor="#0000FF"
            android:text="View Image"
            android:linksClickable="true"
            android:layout_centerHorizontal="true"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>