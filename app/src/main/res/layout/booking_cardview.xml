<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/book_border"
        >

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Trip Rout Name  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/trip_rout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_rout_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Vehicle Number  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/fleet_no"
            android:layout_below="@id/trip_rout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fleet_no"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="PickUp Time  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/departure"
            android:layout_below="@id/fleet_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/departure"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="PickUp Location  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/Duration"
            android:layout_below="@id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Duration"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="DropUp Location  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/arrival"
            android:layout_below="@id/Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrival"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Price (per seat)  :"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/price"
            android:layout_below="@id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trip rout"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            />

        <com.skydoves.elasticviews.ElasticButton
            app:button_duration="250"
            app:button_scale="0.87"
            android:id="@+id/book"
            android:layout_marginTop="10dp"
            android:layout_below="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_border"
            android:text="Book"
            android:fontFamily="@font/gotham"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>